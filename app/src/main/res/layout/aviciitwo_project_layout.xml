<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#010101"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:text="1,291
                      posts"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_editor_absoluteX="0dp"
        app:layout_editor_absoluteY="209dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:text="7.4m
                   followers"
        android:textColor="#FFFFFF"
        app:layout_editor_absoluteX="75dp"
        app:layout_editor_absoluteY="209dp"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="209dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_avicii"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="AVICII"
        android:textColor="#F0ECEC"
        android:textSize="45sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_map"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_avicii" />

    <TextView
        android:layout_width="144dp"
        android:layout_height="66dp"
        android:layout_marginStart="16dp"
        android:text="Stockholm,
                       Sweden"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_map"
        app:layout_constraintTop_toBottomOf="@id/txt_avicii"
        app:layout_constraintVertical_bias="0.035" />

    <ImageView
        android:id="@+id/img_avicii"
        android:layout_width="261dp"
        android:layout_height="251dp"
        android:layout_marginStart="36dp"
        android:scaleType="centerInside"
        android:src="@drawable/avicii8"
        app:layout_constraintStart_toEndOf="@id/txt_avicii"
        app:layout_editor_absoluteY="46dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="48dp" />

    <Button
        android:id="@+id/btn_follow"
        android:layout_width="82dp"
        android:layout_height="24dp"
        android:layout_marginTop="164dp"
        android:background="@drawable/rounded_button"
        android:text="Follow"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_avicii" />

    <ImageView
        android:id="@+id/img_facebook"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_facebook"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/img_inst"
        app:layout_constraintTop_toBottomOf="@id/btn_follow" />

    <ImageView
        android:id="@+id/img_inst"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_instagram"
        app:layout_constraintLeft_toRightOf="@id/img_facebook"
        app:layout_constraintRight_toLeftOf="@id/img_twitter"
        app:layout_constraintTop_toBottomOf="@id/btn_follow" />

    <ImageView
        android:id="@+id/img_twitter"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_twitter"
        app:layout_constraintLeft_toRightOf="@id/img_inst"
        app:layout_constraintRight_toLeftOf="@id/img_gal"
        app:layout_constraintTop_toBottomOf="@id/btn_follow" />

    <ImageView
        android:id="@+id/img_gal"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_art_two"
        app:layout_constraintLeft_toRightOf="@id/img_twitter"
        app:layout_constraintRight_toLeftOf="@id/img_music"
        app:layout_constraintTop_toBottomOf="@id/btn_follow" />

    <ImageView
        android:id="@+id/img_music"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_vynil"
        app:layout_constraintLeft_toRightOf="@id/img_gal"
        app:layout_constraintRight_toLeftOf="@id/img_youtube"
        app:layout_constraintTop_toBottomOf="@id/btn_follow" />

    <ImageView
        android:id="@+id/img_youtube"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintLeft_toRightOf="@id/img_music"
        app:layout_constraintRight_toLeftOf="@id/img_sound"
        app:layout_constraintTop_toBottomOf="@id/btn_follow" />

    <ImageView
        android:id="@+id/img_sound"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_soundcloud"
        app:layout_constraintLeft_toRightOf="@id/img_youtube"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_follow" />


    <TextView
        android:id="@+id/txt_oneday"
        android:layout_width="399dp"
        android:layout_height="61dp"
        android:fontFamily="casual"
        android:text="ONE DAY YOU'LL LEAVE THIS WORLD BEHIND SO LIVE A LIFE YOU WILL REMEMBER..."
        android:textColor="#FBF8F8"
        android:textSize="17sp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_editor_absoluteX="16dp"
        app:layout_editor_absoluteY="357dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="361dp" />

    <ImageView
        android:id="@+id/img_avicii10"
        android:layout_width="92dp"
        android:layout_height="99dp"
        android:layout_marginTop="23dp"
        android:src="@drawable/avicii10size"
        app:layout_constraintTop_toBottomOf="@id/txt_oneday"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/img_avicii11"
        android:layout_width="107dp"
        android:layout_height="76dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/avicii11size"
        app:layout_constraintLeft_toRightOf="@id/img_logo"
        app:layout_constraintTop_toBottomOf="@id/txt_oneday"/>

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="139dp"
        android:layout_height="60dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/avicii13logo"
        app:layout_constraintLeft_toRightOf="@id/img_avicii10"
        app:layout_constraintStart_toEndOf="@id/img_avicii10"
        app:layout_constraintTop_toBottomOf="@id/txt_oneday"/>

    <Button
        android:layout_width="73dp"
        android:layout_height="71dp"
        android:layout_marginTop="40dp"
        android:text="Click
                      More"
        android:textColor="#070606"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/img_avicii11"
        app:layout_constraintTop_toBottomOf="@id/txt_oneday" />


</androidx.constraintlayout.widget.ConstraintLayout>