<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:ignore="ExtraText">


    <TextView
        android:id="@+id/txt_1219"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="1,291"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/txt_sweden"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="45dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_posts"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="Posts"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/txt_1219"/>


    <TextView
        android:id="@+id/txt_74"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="7.4m"
        android:textColor="#FFFFFF"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toBottomOf="@id/txt_sweden"
        app:layout_constraintRight_toLeftOf="@id/img_avicii"/>

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="Followers"
        android:textColor="#FFFFFF"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/txt_74"
        app:layout_constraintLeft_toRightOf="@id/txt_posts"/>


    <TextView
        android:id="@+id/txt_avicii"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="44dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="AVICII"
        android:textColor="#F0ECEC"
        android:textSize="45sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_map"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_avicii"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_location"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Stockholm"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_map"
        app:layout_constraintTop_toBottomOf="@id/txt_avicii"
        app:layout_constraintVertical_bias="0.021" />

    <TextView
        android:id="@+id/txt_sweden"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:text="Sweden"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/txt_location"
        app:layout_constraintLeft_toLeftOf="@id/img_map"/>


    <ImageView
        android:id="@+id/img_avicii"
        android:layout_width="230dp"
        android:layout_height="251dp"
        android:layout_marginStart="20dp"
        android:scaleType="centerInside"
        android:src="@drawable/avicii8"
        app:layout_constraintStart_toEndOf="@id/txt_avicii"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="44dp" />

    <Button
        android:id="@+id/btn_follow"
        android:layout_width="73dp"
        android:layout_height="22dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/rounded_button"
        android:text="Follow"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_avicii" />

    <ImageView
        android:id="@+id/img_facebook"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_facebook"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/img_inst"
        app:layout_constraintTop_toBottomOf="@id/btn_follow" />

    <ImageView
        android:id="@+id/img_inst"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_instagram"
        app:layout_constraintLeft_toRightOf="@id/img_facebook"
        app:layout_constraintRight_toLeftOf="@id/img_twitter"
        app:layout_constraintTop_toBottomOf="@id/btn_follow" />

    <ImageView
        android:id="@+id/img_twitter"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_twitter"
        app:layout_constraintLeft_toRightOf="@id/img_inst"
        app:layout_constraintRight_toLeftOf="@id/img_gal"
        app:layout_constraintTop_toBottomOf="@id/btn_follow" />

    <ImageView
        android:id="@+id/img_gal"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_art_two"
        app:layout_constraintLeft_toRightOf="@id/img_twitter"
        app:layout_constraintRight_toLeftOf="@id/img_music"
        app:layout_constraintTop_toBottomOf="@id/btn_follow" />

    <ImageView
        android:id="@+id/img_music"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_vynil"
        app:layout_constraintLeft_toRightOf="@id/img_gal"
        app:layout_constraintRight_toLeftOf="@id/img_youtube"
        app:layout_constraintTop_toBottomOf="@id/btn_follow" />

    <ImageView
        android:id="@+id/img_youtube"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintLeft_toRightOf="@id/img_music"
        app:layout_constraintRight_toLeftOf="@id/img_sound"
        app:layout_constraintTop_toBottomOf="@id/btn_follow" />

    <ImageView
        android:id="@+id/img_sound"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_soundcloud"
        app:layout_constraintLeft_toRightOf="@id/img_youtube"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_follow" />


    <TextView
        android:id="@+id/txt_oneday"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:fontFamily="casual"
        android:text="ONE DAY YOU'LL LEAVE THIS WORLD BEHIND SO LIVE A LIFE YOU WILL REMEMBER..."
        android:textColor="#FBF8F8"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="357dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="8dp"
        android:text="Tim Bergling 8 September 1989 – 20 April 2018), known professionally as Avicii was a Swedish DJ, electronic musician, and songwriter who specialized in audio programming, remixing and record producing.

    At the age of 16, Bergling began posting his remixes on electronic music forums, which led to his first record deal.He rose to prominence in 2011 with his single 'Levels'. His debut studio album, True (2013), blended electronic music with elements of multiple genres and received generally positive reviews. It peaked in the top ten in more than fifteen countries and topped international dance charts;the lead single, 'Wake Me Up', topped most music markets in Europe and reached number four in the United States.

    In 2015, Bergling released his second studio album, Stories, and in 2017 he released an EP, Avīci (01).[10] His catalog also included the singles 'I Could Be the One' with Nicky Romero, 'You Make Me', 'X You', 'Hey Brothers', 'Addicted to You', 'The Days', 'The Nights', 'Waiting for Love', 'Without You' and 'Lonely Together'. Bergling was nominated for a Grammy Award for his work on 'Sunshine' with David Guetta in 2012[11] and 'Levels' in 2013. Several music publications credit Bergling as among the DJs who ushered electronic music into Top 40 radio in the early 2010s.

    Bergling retired from touring in 2016 due to health problems, having suffered stress and poor mental health for several years.On 20 April 2018, Bergling died by suicide in Muscat, Oman. He was buried on 8 June in his hometown of Stockholm. His posthumous third album titled Tim was released in 2019."
        android:textColor="#F3F1F1"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"


        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints,MissingPrefix" />


</androidx.constraintlayout.widget.ConstraintLayout>